# Stream Owl Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Required Configuration
# =============================================================================

# PostgreSQL connection string
# For local Docker setup: postgresql://streamowl:streamowl_dev@localhost:5432/streamowl
DATABASE_URL=postgresql://streamowl:streamowl_dev@localhost:5432/streamowl

# JWT secret for session tokens (generate with: openssl rand -hex 32)
JWT_SECRET=

# TMDB API key (free from https://www.themoviedb.org/settings/api)
TMDB_API_KEY=

# =============================================================================
# AI Features (required for recommendations)
# =============================================================================

# OpenAI API key (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# =============================================================================
# Optional: Google OAuth (for "Sign in with Google")
# =============================================================================

# Google OAuth credentials (from https://console.cloud.google.com/apis/credentials)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# =============================================================================
# Optional: Premium Subscriptions (Stripe)
# =============================================================================

# Stripe API keys (from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe price IDs for subscription tiers
STRIPE_MONTHLY_PRICE_ID=
STRIPE_YEARLY_PRICE_ID=

# =============================================================================
# Optional: Caching (Redis/Upstash)
# =============================================================================

# Upstash Redis credentials (from https://console.upstash.com/)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# =============================================================================
# Optional: Email (for password reset, notifications)
# =============================================================================

# Email service configuration
EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# =============================================================================
# Application Settings
# =============================================================================

# Base URL for the application (used for OAuth callbacks, email links, etc.)
APP_URL=http://localhost:8000
