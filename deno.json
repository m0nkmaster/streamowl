{
  "lock": false,
  "tasks": {
    "check": "deno fmt --check && deno lint && deno task typecheck",
    "cli": "echo \"import '\\$fresh/src/dev/cli.ts'\" | deno run --unstable-kv -A -",
    "manifest": "deno task cli manifest $(pwd)",
    "start": "deno run -A --unstable-kv dev.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts",
    "update": "deno run -A -r https://fresh.deno.dev/update .",
    "typecheck": "deno check **/*.ts **/*.tsx",
    "test:db": "deno run -A scripts/test-db.ts",
    "migrate": "deno run -A scripts/migrate.ts",
    "test:users": "deno run -A scripts/test-users-table.ts",
    "test:content": "deno run -A scripts/test-content-table.ts",
    "test:user-content": "deno run -A scripts/test-user-content-table.ts",
    "test:lists": "deno run -A scripts/test-lists-tables.ts",
    "test:tags": "deno run -A scripts/test-tags-tables.ts",
    "test:streaming": "deno run -A scripts/test-streaming-services-tables.ts",
    "test:auth": "deno run -A scripts/test-auth-session.ts",
    "test:tmdb": "deno run -A scripts/test-tmdb-client.ts",
    "test:tmdb-search": "deno run -A scripts/test-tmdb-search.ts",
    "test:tmdb-search-tv": "deno run -A scripts/test-tmdb-search-tv.ts",
    "test:tmdb-content-details": "deno run -A scripts/test-tmdb-content-details.ts",
    "test:password-hashing": "deno run -A scripts/test-password-hashing.ts",
    "test:sql-injection": "deno run -A scripts/test-sql-injection-protection.ts",
    "test:xss": "deno run -A scripts/test-xss-prevention.ts"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact": "https://esm.sh/preact@10.19.3",
    "preact/": "https://esm.sh/preact@10.19.3/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.2.1",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "twind": "https://esm.sh/twind@0.16.19",
    "twind/": "https://esm.sh/twind@0.16.19/",
    "$std/": "https://deno.land/std@0.216.0/",
    "tailwindcss": "npm:tailwindcss@3.4.1",
    "tailwindcss/": "npm:/tailwindcss@3.4.1/",
    "tailwindcss/plugin": "npm:/tailwindcss@3.4.1/plugin.js"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
